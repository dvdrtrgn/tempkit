doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    title Template

    include ./_head-styles.pug
    link(href='./styles/expander.css', rel='stylesheet', media='all')

    script
      | window._shim = (location.hash.toLowerCase() === '#shim');
      | if (window._shim) {
      |   document.write('<'+'script src="./vendors/jquery/jquery.js"><\/'+'script>');
      |   document.write('<'+'script src="./scripts/libs/jq-xtn.js"><\/'+'script>');
      | }
      | var z = ['<'+'script data-main="./config" src="./', '?', '.js"><\/'+'script>'];
      | z[1] = (window._shim ? 'scripts/_main' : 'vendors/require.js/require');
      | document.write(z.join(''));

  body.loading

    .page
      include ./_body-header.pug
      include ./_body-footer.pug

      // MODS
      include ./_mod-expander.pug
      include ./_mod-grocer.pug
